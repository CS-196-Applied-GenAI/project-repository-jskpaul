# Copy to .env and set your values. Do not commit .env.

# Required: database URL (use one of the formats below)
# --- Cloud PostgreSQL (e.g. Neon, Supabase, Railway, AWS RDS) ---
# DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST:5432/DATABASE?ssl=require

# --- Cloud MySQL (e.g. PlanetScale, AWS RDS, Azure) ---
# DATABASE_URL=mysql+aiomysql://USER:PASSWORD@HOST:3306/DATABASE

# --- Local SQLite (tests / dev only) ---
# DATABASE_URL=sqlite+aiosqlite:///./chirper.db

# JWT (required for auth)
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
